{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "compile",
          "type": "shell",
          "command": "g++",
          "args": [
              "-std=c++17",
              "-o",
              "${fileBasenameNoExtension}",
              "${file}"
          ],
          "group": {
              "kind": "build",
              "isDefault": false
          }
      },
      {
          "label": "compile and run",
          "type": "shell",
          "command": "g++ -std=c++17 -o 'main.exe' '${file}' ; Get-Content 'input.kp' | .\\main.exe | Out-File 'output.kp' -Encoding utf8"
,
          "group": {
              "kind": "build",
              "isDefault": true
          }
      }
  ]
}